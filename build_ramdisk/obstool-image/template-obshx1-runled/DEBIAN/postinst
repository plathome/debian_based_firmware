#!/bin/sh
# preinst script for openblocks family
#
# see: dh_installdeb(1)

#set -e

. /etc/default/openblocks

case "$1" in
configure)
	[ -f /.chroot ] && exit 0
	if systemctl is-active runled; then
		systemctl stop runled && systemctl disable runled
	fi
	if systemctl is-active obshx1-runled; then
		systemctl restart obshx1-runled
	else
		systemctl enable obshx1-runled && systemctl start obshx1-runled
	fi
	;;
abort-upgrade|abort-remove|abort-deconfigure)
	;;
*)
	echo "postinst called with unknown argument \`$1'" >&2
	exit 1
	;;
esac



# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
